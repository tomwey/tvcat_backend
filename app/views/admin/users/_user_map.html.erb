<div id="user-map" style="width: 100%; height: 600px;"></div>
<script charset="utf-8" src="http://map.qq.com/api/js?v=2.exp"></script>

<script>
window.onload = function() {
  //初始化地图函数  自定义函数名init
      function init() {
          //定义map变量 调用 qq.maps.Map() 构造函数   获取地图显示容器
           var map = new qq.maps.Map(document.getElementById("user-map"), {
              center: new qq.maps.LatLng(30.670470,104.074390),      // 地图的中心地理坐标。
              zoom:8                                                 // 地图的中心地理坐标。
          });
          
          var anchor = new qq.maps.Point(6, 12),
                  size = new qq.maps.Size(14, 25),
                  origin = new qq.maps.Point(0, 0),
                  icon = new qq.maps.MarkerImage('<%= SiteConfig.map_anchor_img %>', size, origin, anchor);
          
          <%
            sessions.each do |session|
          %>
          
          var marker = new qq.maps.Marker({
              position: new qq.maps.LatLng(<%= session.user_loc[0] %>,<%= session.user_loc[1] %>),
              map: map,
              icon: icon,
          });
          
          <% end %>
      }

      //调用初始化函数地图
      init();
}
</script>