<div class="container">
  <div class="row videos">
    <% @videos.each do |video| %>
    <div class="col-xs-6">
      <a href="<%= video.play_url + '?title=' + video.title %>" class="video-item" onclick="App.incrPlayCount('<%= video.uniq_id %>');">
        <%= image_tag video.cover.url %>
        <p class="name"><%= video.title %></p>
      </a>
    </div>
    <% end %>
  </div>
</div>